{% extends 'base.html.twig' %}

{% block body %}
    <h1>Worker list</h1>

    <table class="table table-bordered table-hover table-responsive table-condensed table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Birthdate</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Company</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for object in list %}
                <tr>
                    <td><a href="{{ path('object_show', { 'id': object.id }) }}">{{ object.id }}</a></td>
                    <td>{{ object.firstname }}</td>
                    <td>{{ object.lastname }}</td>
                    <td>{% if object.birthdate %}{{ object.birthdate|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ object.email }}</td>
                    <td>{{ object.phone }}</td>
                    <td>{{ object.company }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('object_show', { 'id': object.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('object_edit', { 'id': object.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('object_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
