<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>Curso Symfony 2 - Reporte PDF</title>

        <style>
        </style>
    </head>

    <body>

        <table style="margin: 15px auto; width: 755px">
            <!-- primera fila -->
            <tr>
                <td>
                    <h4>Lenguajes de Programacion</h4>
                </td>
            </tr>
            <!-- segunda fila -->
            <tr>
                <td>
                    <table style="width: 100%;" cellpadding="5px" class="table table-bordered table-condensed table-striped">
                        <tr>
                            <td style="padding: 5px;">No</td>
                            <td style="padding: 5px;">NOMBRE</td>
                            <td style="padding: 5px;">Programadores que lo conocen</td>
                            <td style="padding: 5px;">Proyectos en los que se ha utilizado</td>
                        </tr>
                        {% for lenguaje in lenguajes %}
                            <tr>
                                <td style="text-align: center;padding: 5px;">{{loop.index}}</td>
                                <td style="padding: 5px;">{{lenguaje.NOMBRE_LENGUAJE}}</td>
                                <td style="text-align: center;padding: 5px;">{{lenguaje.CANTIDAD_PROGRAMADORES}}</td>
                                <td style="text-align: center;padding: 5px;">{{lenguaje.CANTIDAD_PROYECTOS}}</td>
                            </tr>
                        {% endfor%}
                    </table>  
                    <hr>
                </td>
            </tr>
            <!-- tercera fila -->
            <tr>
                <td>
                    <h4>Listado de Programadores</h4>
                </td>
            </tr>
            <!-- cuarta fila -->
            <tr>
                <td>
                    <table style="width: 100%;" cellpadding="5px" class="table table-bordered table-condensed table-striped" >
                        <tr>
                            <th style="padding: 5px;">#</th>
                            <th style="padding: 5px;">Foto</th>
                            <th style="padding: 5px;">CI</th>
                            <th style="padding: 5px;">Nombre</th>
                            <th style="padding: 5px;">Certificado</th>
                            <th style="padding: 5px;">Sistema</th>
                            <th style="padding: 5px;">Lenguajes que conoce</th>
                        </tr>
                        <tbody>{% for entity in programadores %}
                            <tr style="margin-top: 15px;">
                                <td style="padding: 5px;">{{ loop.index }}</td>
                                <td style="padding: 5px;">
                                    <img src="{{entity.webPath?entity.absolutePath: app_kernel_web_dir~"/bundles/samplesindex/img/no-foto.png"}}" alt="" title="" style="width:50px;height:40px;"/>
                                </td>
                                <td style="padding: 5px;">{{ entity.ci }}</td>
                                <td style="padding: 5px;">{{ entity.nombrecompleto }}</td>
                                <td style="padding: 5px;">{% if entity.certificado==1 %}SÃ­{% else%}No{% endif%}</td>
                                <td style="padding: 5px;">{{entity.sistemaoperativo}}</td>
                                <td style="padding: 5px;">{{ entity.lenguajesprogramacion | join(", ") }}</td>
                            </tr>{% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
        </table>

    </body>
</html>